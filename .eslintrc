{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "es6": true,
    "jest": true,
    "node": true,
    "jquery": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 9
  },
  "extends": ["prettier", "airbnb-base", "eslint:recommended"],
  "plugins": ["prettier"],
  "rules": {
    "no-console": 0,
    "no-cond-assign": 0,
    "no-new-require": 2,
    "no-unused-vars": [
      1,
      {
        "argsIgnorePattern": "res|next|^err|^_"
      }
    ],
    "no-process-exit": 0,
    "no-control-regex": 0,
    "no-sparse-arrays": 0,
    "no-unsafe-finally": 0,
    "prettier/prettier": [
      1,
      {
        "trailingComma": "es5",
        "singleQuote": true,
        "printWidth": 130,
        "bracketSpacing": false
      }
    ],
    "no-template-curly-in-string": 2
  }
}
